<div id="slideshow" class="slideshow">
    <ul>
    {{#foreach posts  from="0" to="2"}}
        <li>
            <div class="slide query" style="background-image:url({{image}})">
                <div class="bg-overlay"></div>
                <blockquote>
                    <p>{{{title}}}</p>
                    <a class="view-details" href="{{url}}">阅读详情</a>
                </blockquote>
            </div>
        
        </li>
    {{/foreach}}
    </ul>
</div>