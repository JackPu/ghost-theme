{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<header class="main-header post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    <nav class="main-nav {{#if image}}overlay{{/if}} clearfix">
    </nav>
</header>

<main class="content" role="main">
    <article class="{{post_class}}">

        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
            <section class="post-meta">
                <svg class="icon icon-pie-graph"><use xlink:href="#icon-pie-graph"></use></svg>
                <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">  {{date format="YYYY-MM-DD"}}</time> 
            </section>
        </header>

        <section class="post-content">
            {{content}}
        </section>
        <div class="post-meta">
            <div class="tags" >
                <svg class="icon icon-ribbon"><use xlink:href="#icon-ribbon"></use></svg>
                {{tags prefix="  "}}
            </div>
        </div>
        <!-- Go to www.addthis.com/dashboard to customize your tools -->
        <div style="margin-top:10px;" class="addthis_sharing_toolbox"></div>
        <!--disqus-->
        <div id="disqus_thread"></div>
        <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES * * */
            var disqus_shortname = 'jackpusjourney';

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
        <!--end disqus-->
    </article>
    <aside class="read-next">
        <div class="blur-bannar {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
        </div>
        <div class="container">
            <h5 class="suggest-read-title">
            <svg class="icon icon-star"><use xlink:href="#icon-star"></use></svg> 推荐阅读</h5>
            {{#next_post}}

            <a class="read-next-story "  href="{{url}}">
                <div class="cover"  {{#if image}} style="background-image: url({{image}})" {{/if}}>
                    <h5>{{title}}</h5>
                </div>
                <section>
                    <p>{{excerpt words="20"}}&hellip;</p>
                </section>
            </a>

            {{/next_post}}
            {{#prev_post}}

            <a class="read-next-story prev" href="{{url}}">
                <div class="cover" {{#if image}}style="background-image: url({{image}})" {{/if}}>
                </div>
                <section>
                    <h5>{{title}}</h5>
                    <p>{{excerpt words="20"}}&hellip;</p>
                </section>
            </a>

            {{/prev_post}}
        </div>
    </aside>
    <div class="social-sites">
        <a class="sns-icon fb" title="facebook" href="https://www.facebook.com/jack.pu.56">
            <i class="icon2 icon-fb"></i>
        </a>
        <a class="sns-icon gp" title="google plus" href="https://plus.google.com/+JackPu">
            <i class="icon2 icon-gp"></i>
        </a>
        <a class="sns-icon github" title="github" href="https://github.com/JackPu">
            <i class="icon2 icon-github"></i>
        </a>
        <a class="sns-icon ins" title="instagram" href="https://www.instagram.com/jack_pu/">
            <i class="icon2 icon-ins"></i>
        </a>
        <a class="sns-icon be" title="behance" href="https://www.behance.net/codeui">
            <i class="icon2 icon-be"></i>
        </a>
        <p class="quote">You Can Speak <strong>"Hi"</strong> to Me in Those Ways</p>
    </div>
</main>



<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-55d88bec2ab91030" async="async"></script>
{{/post}}
